#include<stdio.h>
int BS(int a[], int x, int low, int high) {
  if (high >= low) {
    int mid = low + (high - low) / 2;
    if (a[mid] == x)
      return mid;
    if (a[mid] > x)
      return BS(a, x, low, mid - 1);
    return BS(a, x, mid + 1, high);
  }
  return -1;
}
int main(){
	int n,a[100],x,res,i;
	printf("P. Vijaya Lakshmi, Reg.No - 192210200\n");
	printf("\nEnter the Number:");
	scanf("%d",&n);
	for(i=0;i<n;i++){
	scanf("%d",&a[i]);
	}
	printf("\nElements in the Array were:");
	for(i=0;i<n;i++){
	printf("%d ",a[i]);
	}
	printf("\nEnter the Search Number:");
	scanf("%d",&x);
	res = BS(a, x, 0, n - 1);
	if (res == -1)
    	printf("Not found");
  	else
    	printf("Element is found at index %d",res);
    return 0;      
}
