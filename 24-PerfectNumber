#include<stdio.h>
#include<conio.h>
int main(){
	int i,n,k=0;
	printf("P. Vijaya Lakshmi, Reg.No - 192210200\n");
	printf("\nEnter the Number:");
	scanf("%d",&n);
	for(i=1;i<n;i++){
		if(n%i==0){
			k=k+i;
	}
		}
	if(k==n){
	printf("%d is a Perfect Number",n);
	}
	else{
	printf("%d is Not a Perfect Number",n);	
	}
	return 0;
}
