#include <stdio.h>
#include <stdbool.h>
#define MAX_SIZE 100
int arr[MAX_SIZE]; 
int subset[MAX_SIZE]; 
int n; 
int targetSum; 
int currentSum = 0; 
void printSubset(int subsetSize) {
    printf("Subset found: ");
    for (int i = 0; i < subsetSize; i++) {
        printf("%d ", subset[i]);
    }
    printf("\n");
}
void sumOfSubsets(int index, int subsetSize, int remainingSum) {
    if (remainingSum == 0) {
        printSubset(subsetSize);
        return;
    }
    if (index >= n || remainingSum < 0) {
        return;
    }
    subset[subsetSize] = arr[index];
    currentSum += arr[index];
    sumOfSubsets(index + 1, subsetSize + 1, remainingSum - arr[index]);
    currentSum -= arr[index];
    subset[subsetSize] = 0; 
    sumOfSubsets(index + 1, subsetSize, remainingSum);
}

int main() {
	printf("P. Vijaya Lakshmi, Reg.No - 192210200\n");
    printf("Enter the number of elements in the set: ");
    scanf("%d", &n);
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    printf("Enter the target sum: ");
    scanf("%d", &targetSum);
    printf("Subsets with sum %d:\n", targetSum);
    sumOfSubsets(0, 0, targetSum);

    return 0;
}
